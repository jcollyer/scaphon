<div class="row">
  <div class="small-12 columns">
    <br>
    <br>
    <br>
  </div>
  <div class="small-12 columns background-a">
    <h1><%= @community.name %></h1>
    <div class="background-a-content">
      <p><%= markdown(@community.description) %></p>
      <p><%= markdown(@community.descriptionb) %></p>
      <br>
      <br>

      <% if defined? @community.attachments.last.file %>
        <a class="button" href="<%= @community.attachments.last.file %>" >
          <i class="fa fa-download"></i>
          download Info
        </a>
      <% end %>
      <%= link_to 'Edit', edit_community_path(@community), class: "button" %>
      <%= link_to 'Back', communities_path, class: "button" %>
    </div>
  </div>

  <div class="small-12 columns">
    <%= render "module/picture_attachment" %>
  </div>
</div>
