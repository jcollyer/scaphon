<div class="row">
  <% if admin %>
    <div class="small-12 columns">
      <h2>
        <i class="fa fa-plus"></i>
        <%= link_to 'New Board member', new_board_member_path, class: "button" %>
      </h2>
    </div>
  <% end %>
  <div class="small-12 columns">
    <%= render "module/no_content" %>
  </div>
</div>
<% @board_members.each do |board_member| %>
  <div class="row">
    <div class="large-2 small-12 columns">
      <% if defined? board_member.pictures.last.image %>
        <div class="image">
          <br>
          <br>
          <%= image_tag board_member.pictures.last.image.url(:large) %>
        </div>
      <% end %>
    </div>
    <div class="large-10 small-12 columns background-a">
      <h1><%= board_member.name %></h1>
      <div class="background-a-content">
        <h3><%= board_member.position %></h3>
        <h3><%= board_member.info %></h3>
        <% if defined? board_member.attachments.last.file %>
          <a class="button" href="<%= board_member.attachments.last.file.url %>" >
            <i class="fa fa-file-pdf-o"></i>
            View PDF
          </a>
        <% end %>

        <% if admin %>
          <h2>
            <i class="fa fa-edit"></i>
            <%= link_to 'Edit', edit_board_member_path(board_member), class: "button" %>
          </h2>
          <h2>
            <i class="fa fa-trash"></i>
            <%= link_to 'Destroy', board_member, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %>
          </h2>
        <% end %>
      </div>
    </div>
  </div>
<% end %>




