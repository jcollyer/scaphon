<% @pictures.each do | picture | %>
  <div class="small-4 columns gray-box">
    <%= picture.name %>
    <%= image_tag picture.image.url(:large) %>
    <!-- <input type="radio" name="picture" value="<%= picture.id %>"> -->
    <%= link_to 'Destroy', [@thisModel, picture], method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %>
  </div>
<% end %>
