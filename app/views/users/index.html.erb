<div id="user-table">
  <div id="user-table-header-background"> </div>
  <div id="user-table-body">
    <table>
      <thead>
        <tr>
          <th><div class="th-inner check-all"><a class="fa fa-check"></a></div></th>
          <th><div class="th-inner"><%= sortable "email" %></div></th>
          <th><div class="th-inner"><%= sortable "last_name" %></div></th>
          <th><div class="th-inner"><%= sortable "street_address", "Address" %></div></th>
          <th><div class="th-inner"><%= sortable "city" %>City</div></th>
          <th><div class="th-inner"><%= sortable "state" %></div></th>
          <th><div class="th-inner"><%= sortable "zip" %></div></th>
          <th><div class="th-inner"><%= sortable "institution" %></div></th>
          <th><div class="th-inner"><%= sortable "state_registerd", "SR" %></div></th>
          <th><div class="th-inner"><%= sortable "aphon_member", "AM?" %></div></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= check_box_tag "class[]", user.email %></td>
            <td><%= user.email %></td>
            <td><%= user.last_name %>, <%= user.first_name %></td>
            <td><%= user.street_address %></td>
            <td><%= user.city %></td>
            <td><%= user.state %></td>
            <td><%= user.zip %></td>
            <td><%= user.institution %></td>
            <td><%= user.state_registerd %></td>
            <td><%= user.aphon_member %></td>
            <td>
              <%= link_to 'Details', user %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
