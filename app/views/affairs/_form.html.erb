<div class="style-form">
  <%= form_for(@affair) do |f| %>
    <% if @affair.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@affair.errors.count, "error") %> prohibited this affair from being saved:</h2>

        <ul>
        <% @affair.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="field">
    <%= f.label :kind, class: "required" %>
    <%= f.select :kind, options_for_select([["Conference", "conference"],
                                            ["Quarterly", "quarterly"],
                                            ["Event", "event"]], @affair.kind), :required => true %>
