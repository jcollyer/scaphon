  <div class="field">
    <%= f.label :name, class: "required" %><br>
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="field">
    <%= f.label :date, class: "required" %><br>
    <%= f.date_select :date, :required => true %>
  </div>
  <div class="field">
    <%= f.label :location, class: "required" %><br>
    <%= f.text_field :location, :required => true %>
  </div>
  <div class="field">
    <%= f.label :cost, class: "required" %><br>
    <span class="d-n-b">$</span><span class="d-n-b"><%= f.text_field :cost, :required => true %></span>
  </div>
  <div class="field">
    <%= f.label :paypal %><br>
    <%= f.text_area :paypal %>
  </div>
    <div class="field">
    <%= f.label :description, class: "required" %><br>
    <%= f.text_area :description, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
  <% end %>
</div>
