<div class="row">
  <%= link_to 'Edit', edit_affair_path(@affair) %> |
  <%= link_to 'Back', affairs_path %>
  <div class="small-6 small-offset-3 columns">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Kind:</strong>
      <%= @affair.kind %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @affair.name %>
    </p>

    <p>
      <strong>Date:</strong>
      <%= @affair.date %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @affair.location %>
    </p>

    <p>
      <strong>Cost:</strong>
      <%= @affair.cost %>
    </p>


    <p>
      <strong>Paypal:</strong>
    </p>
    <div id="new_pp_code">
      <div style="display:none" id="initial_paypal_code">
        <%= @affair.paypal %>

      </div>
    </div>

    <p>
      <strong>Description:</strong>
      <%= @affair.description %>
    </p>
  </div>
</div>

<%= render "module/picture_attachment" %>
