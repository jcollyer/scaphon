<div class="row">
  <div class="small-12 columns">
    <br>
    <br>
    <br>
  </div>

  <div class="large-6 small-12 columns">
    <% if defined? @newsletter.pictures.last.image %>
      <div class="image">
        <%= image_tag @newsletter.pictures.last.image.url(:xlarg) %>
      </div>
    <% end %>
  </div>
  <div class="large-6 small-12 columns background-a">
    <h1><%= @newsletter.name %></h1>
    <div class="background-a-content">
      <h3><%= @newsletter.date.strftime("%m/%d/%Y") %></h3>
      <% if defined? @newsletter.attachments.last.file %>
        <a class="button" href="<%= @newsletter.attachments.last.file %>" >
          <i class="fa fa-download"></i>
          download Scoop
        </a>
      <% end %>
      <%= link_to 'Edit', edit_newsletter_path(@newsletter), class: "button" %>
      <%= link_to 'Back', newsletters_path, class: "button" %>
    </div>
  </div>

  <div class="small-12 columns">
    <%= render "module/picture_attachment" %>
  </div>
</div>

