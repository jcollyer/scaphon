<div class="home-main">
  <div class="home-item">
    <% if defined? @newsletter %>
      <a href="/newsletters">
        <h1 class="newsletter"><% if defined? @newsletter.name %><%= @newsletter.name %><%end%></h1>
        <% if defined? @newsletter_picture.image %><%= image_tag @newsletter_picture.image.url(:xlarg), class: "item-image" %><%end%>
      </a>
    <% end %>
  </div>
  <% @events.each do |e| %>
    <div class="home-item">
      <% if defined? e.pictures.first %>
        <a href="/affairs">
          <h1 class="<%= e.kind %>"><%= e.name %></h1>
          <%= image_tag e.pictures.first.image.url(:large), class: "item-image" %>
        </a>
      <% end %>
    </div>
  <% end %>
</div>

<div class="community">
  <div class="community_board small-12 columns">
    <% if defined? @community_picture.image %><%= image_tag @community_picture.image.url(:large), class: "image-style" %><%end%>
    <% if defined? @community.name %><h1><%= @community.name %></h1><%end%>
    <% if defined? @community.description %>
      <p>
        <%= @community.description %>
      </p>
    <%end%>
  </div>
</div>
